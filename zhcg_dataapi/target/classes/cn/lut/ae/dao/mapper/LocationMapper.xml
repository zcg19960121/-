<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.lut.ae.location">

	<select id="getLocationStats" parameterType="cn.lut.ae.model.QueryModel"
		resultType="hashMap">
		SELECT SUM(sessions) AS visit,
		SUM(active_users) AS uv,
		SUM(bounce_sessions) AS bounce_number
		<include refid="groupColums" />
		FROM stats_device_location
		<include refid="innerJoin" />
		<where>
			<include refid="whereColumnsNonSum" />
			<include refid="whereColumns" />
		</where>
		<include refid="groupBy" />
		ORDER BY date.calendar ASC
	</select>

	<sql id="groupColums">
		<if test="groups != null">
			<foreach item="item" index="index" collection="groups">
				<if test="item == 'platform'">
					,platform.platform_name AS group_platform
				</if>
				<if test="item == 'country'">
					,location.country AS group_country
				</if>
				<if test="item == 'province'">
					,location.province AS group_province
				</if>
				<if test="item == 'city'">
					,location.city AS group_city
				</if>
				<if test="item == 'day'">
					,date.calendar AS group_day
				</if>
				<if test="item == 'year'">
					,date.year AS group_year
				</if>
				<if test="item == 'season'">
					,concat(date.year,':', date.season) AS group_season
				</if>
				<if test="item == 'month'">
					,concat(date.year,':', date.month) AS group_month
				</if>
				<if test="item == 'week'">
					,concat(date.year,':', date.week) AS group_week
				</if>
			</foreach>
		</if>
	</sql>

	<sql id="innerJoin">
		INNER JOIN dimension_date AS date ON date_dimension_id = date.id
		<if test="groups != null">
			<foreach item="item" index="index" collection="groups">
				<if test="item == 'platform'">
					INNER JOIN dimension_platform AS platform ON platform_dimension_id =
					platform.id
				</if>
			</foreach>
			<if
				test="(groups.contains('country') or groups.contains('province') or groups.contains('city'))">
				INNER JOIN dimension_location AS location ON location_dimension_id =
				location.id
			</if>
		</if>
	</sql>

	<sql id="whereColumnsNonSum">
		<if test="queryColumn.type != null">
			date.type = #{queryColumn.type}
		</if>
		<if test="queryColumn.startDate != null">
			<if test="queryColumn.type == 'day'">
				AND date.calendar <![CDATA[ >=  ]]>
				#{queryColumn.startDate}
			</if>
			<if test="queryColumn.type == 'week'">
				AND
				concat(YEAR(#{queryColumn.startDate}),LPAD(WEEK(#{queryColumn.startDate})
				+ 1, 2, 0)) <![CDATA[ <=  ]]>
				concat(date.year,LPAD(date.week, 2, 0))
			</if>
			<if test="queryColumn.type == 'month'">
				AND
				concat(YEAR(#{queryColumn.startDate}),LPAD(MONTH(#{queryColumn.startDate}),
				2, 0)) <![CDATA[ <=  ]]>
				concat(date.year,LPAD(date.month, 2, 0))
			</if>
		</if>
		<if test="queryColumn.endDate != null">
			<if test="queryColumn.type == 'day'">
				AND date.calendar <![CDATA[ <=  ]]>
				#{queryColumn.endDate}
			</if>
			<if test="queryColumn.type == 'week'">
				AND
				concat(YEAR(#{queryColumn.endDate}),LPAD(WEEK(#{queryColumn.endDate})
				+ 1, 2, 0)) <![CDATA[ >=  ]]>
				concat(date.year,LPAD(date.week, 2, 0))
			</if>
			<if test="queryColumn.type == 'month'">
				AND
				concat(YEAR(#{queryColumn.endDate}),LPAD(MONTH(#{queryColumn.endDate}),
				2, 0)) <![CDATA[ >=  ]]>
				concat(date.year,LPAD(date.month, 2, 0))
			</if>
		</if>
	</sql>

	<sql id="whereColumns">
		<if test="queryColumn.dimensionPlatformId != 0">
			AND platform_dimension_id = #{queryColumn.dimensionPlatformId}
		</if>
		<if test="queryColumn.dimensionLocationId != 0">
			AND location_dimension_id=#{queryColumn.dimensionLocationId}
		</if>
		<if test="queryColumn.dimensionLocationId == 0">
			<if test="groups != null">
				<choose>
					<when
						test="groups.contains('country') and groups.contains('province') and groups.contains('city')">
						AND location.country != 'all' AND location.province != 'all' AND
						location.city != 'all'
					</when>
					<when test="groups.contains('country')">
						AND location.country != 'all'
						<choose>
							<when test="groups.contains('province')">
								AND location.province != 'all' AND location.city = 'all'
							</when>
							<when test="groups.contains('city')">
								<choose>
									<when
										test="queryColumn.locationProvince != 'all' and queryColumn.locationProvince != 'group_by'">
										AND location.province = #{queryColumn.locationProvince}
									</when>
									<otherwise>
										AND location.province != 'all'
									</otherwise>
								</choose>
								AND location.city != 'all'
							</when>
							<otherwise>
								AND location.province = 'all' AND location.city = 'all'
							</otherwise>
						</choose>
					</when>
					<when test="groups.contains('province')">
						<if
							test="queryColumn.locationCountry != 'all' and queryColumn.locationCountry != 'group_by'">
							AND location.country = #{queryColumn.locationCountry}
						</if>
						AND location.province != 'all'
						<choose>
							<when test="groups.contains('city')">
								AND location.city != 'all'
							</when>
							<otherwise>
								AND location.city = 'all'
							</otherwise>
						</choose>
					</when>
					<when test="groups.contains('city')">
						<if
							test="queryColumn.locationCountry != 'all' and queryColumn.locationCountry != 'group_by'">
							AND location.country = #{queryColumn.locationCountry}
						</if>
						<if
							test="queryColumn.locationProvince != 'all' and queryColumn.locationProvince != 'group_by'">
							AND location.province = #{queryColumn.locationProvince}
						</if>
						AND location.city != 'all'
					</when>
				</choose>
			</if>
		</if>
	</sql>

	<sql id="groupBy">
		<if test="groups != null and groups.size() > 0">
			GROUP BY
			<trim prefixOverrides=",">
				<foreach item="item" index="index" collection="groups">
					<if test="item == 'platform'">
						,platform_dimension_id
					</if>
					<if test="item == 'country'">
						,location.country
					</if>
					<if test="item == 'province'">
						,location.province
					</if>
					<if test="item == 'city'">
						,location.city
					</if>
					<if test="item == 'year'">
						,date.year
					</if>
					<if test="item == 'season'">
						,date.year,date.season
					</if>
					<if test="item == 'month'">
						,date.year,date.month
					</if>
					<if test="item == 'week'">
						,date.year,date.week
					</if>
					<if test="item == 'day'">
						,date.year,date.month,date.day
					</if>
				</foreach>
			</trim>
		</if>
	</sql>
</mapper>
