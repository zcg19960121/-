<workflow-app name='transformer-mr' xmlns="uri:oozie:workflow:0.3">
  <start to="mr-etl"/>

  <action name="mr-etl">
    <java>
    	<job-tracker>${jobTracker}</job-tracker>
    	<name-node>${nameNode}</name-node>
    	<main-class>com.lut.etl.mr.ald.AnalyserLogDataRunner</main-class>
    </java>
    <ok to="fk1"/>
    <error to="kill"/>
  </action> 

  <fork name="fk1">
  	<path start="mr-am"/>
  	<path start="mr-au"/>
  	<path start="mr-inbound"/>
  	<path start="mr-location"/>
  </fork>  

  <action name="mr-am">
    <java>
    	<job-tracker>${jobTracker}</job-tracker>
    	<name-node>${nameNode}</name-node>
    	<main-class>com.lut.transformer.mr.am.ActiveMemberRunner</main-class>
    </java>
    <ok to="jn1"/>
    <error to="kill"/>
  </action>

  <action name="mr-au">
    <java>
    	<job-tracker>${jobTracker}</job-tracker>
    	<name-node>${nameNode}</name-node>
    	<main-class>com.lut.transformer.mr.au.ActiveUserRunner</main-class>
    </java>
    <ok to="jn1"/>
    <error to="kill"/>
  </action>

  <action name="mr-inbound">
    <java>
    	<job-tracker>${jobTracker}</job-tracker>
    	<name-node>${nameNode}</name-node>
    	<main-class>com.lut.transformer.mr.inbound.InboundRunner</main-class>
    </java>
    <ok to="jn1"/>
    <error to="kill"/>
  </action>

  <action name="mr-location">
    <java>
    	<job-tracker>${jobTracker}</job-tracker>
    	<name-node>${nameNode}</name-node>
    	<main-class>com.lut.transformer.mr.location.LocationRunner</main-class>
    </java>
    <ok to="jn1"/>
    <error to="kill"/>
  </action>

  <join name="jn1" to="fk2"/>

  <fork name="fk2">
  	<path start="mr-nm"/>
  	<path start="mr-nu"/>
  	<path start="mr-pv"/>
  	<path start="mr-sessions"/>
  </fork>

  <action name="mr-nm">
    <java>
    	<job-tracker>${jobTracker}</job-tracker>
    	<name-node>${nameNode}</name-node>
    	<main-class>com.lut.transformer.mr.nm.NewMemberRunner</main-class>
    </java>
    <ok to="jn2"/>
    <error to="kill"/>
  </action>

  <action name="mr-nu">
    <java>
    	<job-tracker>${jobTracker}</job-tracker>
    	<name-node>${nameNode}</name-node>
    	<main-class>com.lut.transformer.mr.nu.NewInstallUserRunner</main-class>
    </java>
    <ok to="jn2"/>
    <error to="kill"/>
  </action>

  <action name="mr-pv">
    <java>
    	<job-tracker>${jobTracker}</job-tracker>
    	<name-node>${nameNode}</name-node>
    	<main-class>com.lut.transformer.mr.pv.PageViewRunner</main-class>
    </java>
    <ok to="jn2"/>
    <error to="kill"/>
  </action>

  <action name="mr-sessions">
    <java>
    	<job-tracker>${jobTracker}</job-tracker>
    	<name-node>${nameNode}</name-node>
    	<main-class>com.lut.transformer.mr.sessions.SessionsRunner</main-class>
    </java>
    <ok to="jn2"/>
    <error to="kill"/>
  </action>

  <join name="jn2" to="end"/>

  <kill name="kill">
    <message>mapreduce failed, error message:${wf:errorMessage(wf:lastErrorNode())}</message>
  </kill>

  <end name="end"/>
</workflow-app>
